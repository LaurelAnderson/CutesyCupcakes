<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile</h1>
        <hr>
        <h2>My Orders</h2>

        {{#each orders}}

        <div class="card" style="width: 18rem;">

            <ul class="list-group">

                {{#each this.items}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="badge bg-primary rounded-pill">{{ this.price }}</span>
                    {{ this.item.title }} | {{ this.qty }}
                </li>
                {{/each}}
            </ul>

                <div class="card-footer">${{ this.cart.totalPrice }}</div>

        </div>
        {{/each}}

    </div>
</div>
